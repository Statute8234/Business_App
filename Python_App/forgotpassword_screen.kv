<Forgotpassword_Screen>
    name: 'forgotpassword_screen'

    Image:
        source: r'C:\Projects\Python\Python_App\icon\interior-4934930_1920.jpg'
        allow_stretch: True
        keep_ratio: False

    MDCard:
        size_hint: None, None
        size: 360, 640
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
        radius: [17, 17, 17, 17]

        Image:
            source: r'C:\Projects\Python\Python_App\icon\forgot-password.png'
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': 0.5}

        MDLabel:
            id: welcome_label
            test: 'RedInfinity_Pro official App'
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 25

        BoxLayout:
            orientation: 'vertical'
            spacing: 20

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MDLabel:
                    id: username_label
                    text: "Username"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id: username_input
                    hint_text: "Username"
                    icon_left: "account"
                    mode: "round"
                    max_text_length: 30
                    width: 200
                    height: 50
                    size_hint_x: None
                    size_hint_y: None
                    padding_y: 10
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MDLabel:
                    id: email_label
                    text: "Email"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15
                    size_hint_x: None
                    width: 110

                MDTextField:
                    id: email_input
                    hint_text: "Email"
                    icon_left: "email"
                    mode: "round"
                    width: 200
                    height: 50
                    size_hint_x: None
                    size_hint_y: None
                    padding_y: 10
                    write_tab: False

        MDFlatButton:
            id: back_button
            text: "Back"
            size_hint_y: None
            padding_y: 15
            on_release:
                app.root.current = 'login_screen'

        Widget:
            size_hint_y: None
            height: 90

        MDRoundFlatIconButton:
            id: submit_button
            text: "Submit"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            md_bg_color: "blue"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            on_release: root.check_input()