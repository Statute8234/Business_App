<Forgotpassword_Screen>
    name: 'forgotpassword_screen'

    Image:
        source: r'C:\Projects\Python\Python_App\icon\interior-4934930_1920.jpg'
        allow_stretch: True
        keep_ratio: False

    MDCard:
        size_hint: None, None
        size: 400, 700
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 10
        padding: 30
        spacing: 30
        orientation: 'vertical'
        radius: [20, 20, 20, 20]

        Image:
            source: r'C:\Projects\Python\Python_App\icon\forgot-password.png'
            size_hint: None, None
            size: 120, 120
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            spacing: 20

            MDTextField:
                id: businessName_input
                hint_text: "Business Name"
                icon_left: "google-my-business"
                mode: "fill"
                max_text_length: 50
                size_hint_x: 1
                size_hint_y: None
                height: 50
                write_tab: False

            MDTextField:
                id: symbolEmblem_input
                hint_text: "Symbol/Emblem"
                icon_left: "shape"
                mode: "fill"
                max_text_length: 50
                size_hint_x: 1
                size_hint_y: None
                height: 50
                write_tab: False

            MDTextField:
                id: email_input
                hint_text: "Email"
                icon_left: "email"
                mode: "fill"
                size_hint_x: 1
                size_hint_y: None
                height: 50
                write_tab: False

        MDFlatButton:
            id: back_button
            text: "Back"
            size_hint_y: None
            padding_y: 15
            on_release:
                app.root.current = 'login_screen'

        Widget:
            size_hint_y: None
            height: 60

        MDRoundFlatIconButton:
            id: submit_button
            text: "Submit"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            md_bg_color: "blue"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            on_release: root.check_input()