<Home_Screen>
    name: 'home_screen'

    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Welcome"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
            elevation: 10

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0, dp(16), dp(16), 0
            size_hint_y: 1

            MDBoxLayout:
                orientation: 'vertical'
                # Static Menu Items

                MDNavigationDrawerMenu:
                    MDNavigationDrawerItem:
                        text: "Home"
                        icon: "home"
                    MDNavigationDrawerItem:
                        text: "Popular"
                        icon: "fire"
                    MDNavigationDrawerItem:
                        text: "Explore"
                        icon: "home-search"
                    MDNavigationDrawerItem:
                        text: "All"
                        icon: "web"
                # Search Bar
                MDTextField:
                    hint_text: "Search"
                    on_text: app.filter_list(self.text)
                    size_hint_y: None
                    height: dp(48)
                    mode: "round"
                    icon_right: "magnify"

                    ScrollView:
                        scroll_type: ['bars', 'content']
                        bar_width: dp(10)
                        effect_cls: "ScrollEffect"
                        MDList:
                            id: nav_list
                            OneLineIconListItem:
                                text: "Home"
                                IconLeftWidget:
                                    icon: "home"

        MDBottomNavigation:
            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'
            MDBottomNavigationItem:
                name: 'business'
                text: 'Business'
                icon: 'google-my-business'
            MDBottomNavigationItem:
                name: 'volunteers'
                text: 'Volunteers'
                icon: 'account-group'
