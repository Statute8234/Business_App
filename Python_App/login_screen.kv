<Login_Screen>
    name: 'login_screen'

    Image:
        source: r'C:\Projects\Python\Python_App\icon\interior-4934930_1920.jpg'
        allow_stretch: True
        keep_ratio: False

    MDCard:
        size_hint: None, None
        size: 360, 640
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
        radius: [17, 17, 17, 17]

        Image:
            source: r'C:\Projects\Python\Python_App\icon\user.png'
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': 0.5}

        MDLabel:
            id: welcome_label
            test: 'RedInfinity_Pro official App'
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 25

        BoxLayout:
            orientation: 'vertical'
            spacing: 20

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MDLabel:
                    id: username_label
                    text: "Username"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id: username_input
                    hint_text: "Username"
                    icon_left: "account"
                    mode: "round"
                    max_text_length: 30
                    width: 200
                    height: 50
                    size_hint_x: None
                    size_hint_y: None
                    padding_y: 10
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    id: password_label
                    text: "Password"
                    font_size: 18
                    halign: 'left'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15
                    size_hint_x: None
                    width: 110

                MDTextField:
                    id: text_field
                    hint_text: "Password"
                    icon_left: "key"
                    mode: "round"
                    max_text_length: 30
                    width: 160
                    height: 50
                    size_hint_x: None
                    size_hint_y: None
                    password: True
                    on_text: self.text = self.text.replace(" ", "")
                    write_tab: False

                MDIconButton:
                    icon: "eye-off"
                    theme_text_color: "Hint"

                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"

        MDFlatButton:
            id: Forgotpassword_Screen
            text: "Forgot Password"
            size_hint_y: None
            padding_y: 15
            on_release:
                app.root.current = 'forgotpassword_screen'

        Widget:
            size_hint_y: None
            height: 50

        MDRoundFlatIconButton:
            id: signup_button
            text: "Sign Up"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            on_release:
            on_release:
                app.root.current = 'signup_screen'

        MDRoundFlatIconButton:
            id: submit_button
            text: "Submit"
            size_hint_y: None
            padding_y: 15
            size_hint_x: 1
            radius: [19, 19, 19, 19]
            md_bg_color: "blue"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y':0.5}